/* pages/ranking/ranking.wxss */
.close {
  position: fixed;
  width: 55rpx;
  height: 55rpx;
  background-size: 100% 100%;
  margin: 90rpx 0 0 36rpx;
}
.top_img {
  width: 100% !important;
  float: left;
}
.yj {
  margin-top: -20px;
  background: #fff;
  border-radius: 5rem;
  padding: .7rem 1rem;
  box-shadow: 1px 8px 44px 2px rgba(0, 0, 0, 0.25);
  -webkit-box-shadow: 1px 8px 44px 2px rgba(0, 0, 0, 0.25);
  -moz-box-shadow: 1px 8px 44px 2px rgba(0, 0, 0, 0.25);
}

.rg_icon {
  width: 1.2rem;
  height: 1.2rem;
  float: left;
}

.details {
  font-size: .8rem;
  text-align: center;
  line-height: 1.2rem;
}

.details text {
  margin-left: .4rem;
  height: 1.2rem;
  line-height: 1.2rem;

}

.playall {
  width: 100%;
  height: 48rpx;
  margin: 32rpx 0 32rpx 0;
}

.playpic {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f22;
  margin: 0 16rpx -6rpx 16rpx;
}

.playtext {
  font-size: 32rpx;
  font-weight: bold;
}

.play {
  width: 1.5rem;
  height: 1.5rem;
  margin-top: .5rem;
}

.bh {

  font-size: 1.4rem;
  text-align: center;
}

.name {
  font-weight: bold;
}

.author {
  color: gray;
  font-size: .8rem;
}

.red {
  color: #f00;
  font-size: 1.4rem;
  text-align: center;
  height: 2rem;

}

.item {
  margin-top: 1rem;
}
.loading{
  width: 8rem;
  height: 5rem;
}