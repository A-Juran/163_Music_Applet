/* pages/listdetails/listdetails.wxss */
.close {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  background-size: 100% 100%;
  margin: 88rpx 0 0 36rpx;
}

.bgpic {
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  background-position: center center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
}

.top {
  width: 100%;
  height: 128rpx;
  margin-top: -150rpx;
}

.top .text {
  float: left;
  width: 200rpx;
  margin-left: 16rpx;
  color: #fff;
}

.day {
  font-size: 96rpx;
}

.playall {
  width: 100%;
  height: 48rpx;
  margin: 50rpx 0 32rpx 0;
}

.playpic {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f22;
  margin: 0 16rpx -10rpx 16rpx;
}

.playtext {
  font-size: 32rpx;
}

.musiclist {
  height: 100rpx;
  width: 100%;
  margin: 8rpx 8rpx 8rpx 16rpx;
  border-bottom: 1rpx solid #00000022;
}

.musicimg {
  float: left;
}

.musicimg .musicpic {
  height: 96rpx;
  width: 96rpx;
  border-radius: 16rpx;
}

.musicmvpic {
  height: 99rpx;
  width: 126rpx;
}


.musicinfo {
  height: 96rpx;
  width: 475rpx;
  float: left;
  margin-left: 16rpx;
}

.musictitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.musicauthor {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: smaller;
  color: #888;
}