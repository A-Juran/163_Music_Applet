/* pages/singer/singer.wxss */
.close {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  background-size: 100% 100%;
  margin: 88rpx 0 0 36rpx;
}

.bgpic {
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  background-position: center center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
}

.headpic {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 4rpx solid #fff;
  margin: -80rpx 0 0 260rpx;
  display: block;
}

.card {
  width: 680rpx;
  position: relative;
  z-index: 10;
  margin: 0 0 16rpx 35rpx;
  box-sizing: border-box;
  box-shadow: rgb(0 0 0 / 15%) 0 4rpx 30rpx;
  border-radius: 30rpx;
  border: 4rpx solid #e3e3e3;
  background-color: #fffffffe;
}

.top {
  height: 250rpx;
  margin-top: -64rpx;
  text-align: center;
}

.middle {
  padding: 32rpx 16rpx;
  min-height: 250rpx;
}

.middle-text {
  font-size: small;
  color: #666;
  margin: 8rpx;
}

.middle-text text {
  color: #000;
}

.identify {
  height: 48rpx;
  width: 100%;
  margin-top: 8rpx;
}

.identifypic {
  margin: 0 0 -2rpx 16rpx;
  width: 32rpx;
  height: 32rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
}

.desc {
  font-size: 20rpx;
  color: #888;
}

.playall {
  width: 100%;
  height: 48rpx;
  margin: 32rpx 0 32rpx 0;
}

.playpic {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #f22;
  margin: 0 16rpx -10rpx 16rpx;
}

.playtext {
  font-size: 32rpx;
}

.musiclist {
  height: 100rpx;
  width: 100%;
  margin: 8rpx 8rpx 8rpx 16rpx;
  border-bottom: 1rpx solid #00000022;
}

.musicimg {
  float: left;
}

.musicimg .musicpic {
  height: 96rpx;
  width: 96rpx;
  border-radius: 16rpx;
}

.musicmvpic {
  height: 99rpx;
  width: 126rpx;
}


.musicinfo {
  height: 96rpx;
  width: 475rpx;
  float: left;
  margin-left: 16rpx;
}

.musictitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.musicauthor {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: smaller;
  color: #888;
}