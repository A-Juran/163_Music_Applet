  <view class='progress-root-container'>
    <text class='text'>{{currentDur}}</text>
    <view class='progress-max'></view>
    <view class='progress-current' style="width:{{2*progress}}rpx"></view>
    <text class='pencent-text'>{{totalDur}}</text>
    <image class='slice-button' src='{{slideImg}}' catchtouchmove="buttonMove" catchtouchstart="buttonStart"
      catchtouchend="buttonEnd" style="left:{{2*buttonLeft}}rpx" />
  </view>
